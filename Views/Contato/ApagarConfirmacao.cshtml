@model ContatoModel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="text-center">
    <h3>Desejar Apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-success btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>