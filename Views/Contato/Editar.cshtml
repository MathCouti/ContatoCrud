@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">
    <h1>Editar contato</h1>

</div>
    <form asp-controller="Contato" asp-action="Alterar" method="post">
      <input type="hidden" asp-for="Id"/>
      <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
      </div>
      <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o Email">
        @Html.ValidationMessageFor(x => x.Email)
      </div>
      <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o telefone">
        @Html.ValidationMessageFor(x => x.Celular)
      </div>
      <button type="submit" class="btn btn-primary btn-block">Alterar</button>
      <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
   </form>